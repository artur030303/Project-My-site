{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Django",
      "type": "debugpy", 
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "--noreload"],
      "django": true,
      "autoStartBrowser": false,
      "console": "integratedTerminal",
      "env": {
        "DJANGO_SETTINGS_MODULE": "my_site.settings"
      }
    }
  ]
}
